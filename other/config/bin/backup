#!/bin/sh

rsync_nocopy="--links --hard-links"
bk="nice -n 19 my_rsync $rsync_nocopy --preallocate --exclude=private*/"

tr_dir=/files/travmaturg
tr_dir_big=/big_files/travmaturg
usb_dir=/mnt/backup


# func dir

mk_snapshot () {
  mkdir -p current/$3
  $bk $1 $partial/$3 $latest/$3 $2/ current/$3 || exit 1
  sync --file-system .
  }

mk_copy () {
  mkdir -p $3
  $bk --delete --delete-excluded $1 $2/ $3 || exit 1
  sync --file-system .
  }


# func part

set_dir () { mkdir -p $1 || exit 1; cd $1; }

bk_part_start () {
  set_dir $1
  rm -rf partial
  mv -f current partial > /dev/null 2>&1
  partial="--link-dest=$1/partial"
  latest="--link-dest=$1/latest"
  }

bk_part_end () {
  rm -rf partial
  bk_new=`date +%Y/%m/%d/%T`
  mkdir -p $bk_new
  mv -T current $bk_new
  ln -f -s -T $bk_new latest
  }


# func disk
rnd_fn="random numbers because I can"
rnd () { dd if=/dev/urandom of="$1/$rnd_fn" bs=1024000 count=1 > /dev/null 2>&1; }
try_mnt () { umount $usb_dir > /dev/null 2>&1; mount -U $1 > /dev/null 2>&1; }
bk_disk_end () { cd /; rnd $1; df -h -t ext4; }


rnd $tr_dir
rnd $tr_dir_big
sync


# filters personal

my_filter="--exclude=out/ --exclude=*.swp"

conf="--exclude=/.config"
hf_config="$conf/audacious/ $conf/geeqie/ $conf/gsmartcontrol/ $conf/gtk-*/ $conf/libreoffice/ $conf/pulse/ $conf/vlc/"
hf_ext="--exclude=*.bak* --exclude=*.db"
hf_dir="--exclude=*[cC]ache*/ --exclude=/.dbus/ --exclude=/.gnupg/ --exclude=/.gstreamer-*/ --exclude=/.gconf/ --exclude=/.gimp*/ --exclude=/.kde/ --exclude=/.local/ --exclude=/.scorched3d/ --exclude=/.texlive*/ --exclude=*thumbnails/"
hf_other="--exclude=/.freeciv* --exclude=*[.-]log --exclude=/*session* --exclude=/*[._]tmp --exclude=/.Xauthority"
home_filter="$hf_config $hf_ext $hf_dir $hf_other"

# filters downloadable

rs_filter="--exclude=*.png --exclude=*.tiff"

ext_pub_filter=""

flash_pub_filter="$ext_pub_filter --exclude=/*Gutenberg/ --exclude=/openstreetmap/ --exclude=/soft/iso/ --exclude=/wikimedia/"


# flash

bk_dir=$usb_dir/backup

corsair_survivor_stealth_128_gb_1="087eb000-52fb-4748-8376-f15c95af7bd9"
corsair_survivor_stealth_128_gb_2="d3c2b096-ded1-4ab3-8b8e-953c97191990"
corsair_voyager_64_gb="ed3b5e4d-cfd7-459f-8f44-9cf63abf6dd8"

if
  try_mnt $corsair_survivor_stealth_128_gb_1 || \
  try_mnt $corsair_survivor_stealth_128_gb_2 || \
  try_mnt $corsair_voyager_64_gb || \
  false
then
  bk_part_start $bk_dir/personal
  mk_snapshot "$my_filter" $tr_dir/my my
  mk_snapshot "$home_filter" /home/misha home
  mk_snapshot "" $tr_dir_big/семейное семейное
  bk_part_end

  bk_part_start $bk_dir/downloadable
  mk_snapshot "$rs_filter" $tr_dir/raw_samples raw_samples
  mk_snapshot "$flash_pub_filter" $tr_dir_big/public public
  bk_part_end

  bk_disk_end $bk_dir
  umount $usb_dir
  exit 0
fi


# external

bk_dir=$usb_dir/backup

toshiba_3_tb="9a4da0f3-fed6-4b18-aa48-903d8fc586e3"
wd_my_passport_ultra_3_tb_black="66abc11f-3a13-4c77-ae69-8b0154f47774"
wd_my_passport_ultra_3_tb_blue="a15c91ba-73de-4e11-86b0-8968360a2d18"

if
  try_mnt $toshiba_3_tb || \
  try_mnt $wd_my_passport_ultra_3_tb_black || \
  try_mnt $wd_my_passport_ultra_3_tb_blue || \
  false
then
  bk_part_start $bk_dir/personal
  mk_snapshot "$my_filter" $tr_dir/my my
  mk_snapshot "$home_filter" /home/misha home
  mk_snapshot "" $tr_dir_big/семейное семейное
  bk_part_end

  bk_part_start $bk_dir/downloadable
  mk_snapshot "" $tr_dir_big/archive archive
  mk_snapshot "$rs_filter" $tr_dir/raw_samples raw_samples
  mk_snapshot "$ext_pub_filter" $tr_dir_big/public public
  bk_part_end

  set_dir $bk_dir/other
  mk_copy "" $tr_dir_big/porn porn
  mk_copy "" $tr_dir_big/unsorted unsorted

  bk_disk_end $bk_dir
  umount $usb_dir
  exit 0
fi


# DAS

bk_dir=$usb_dir/backup

hgst_ultrastar_6_tb="4cdc3a1d-e7c5-4899-b98c-a36b040f680e"
#toshiba_n300_6_tb="b70e2abf-5210-4d6f-bace-5d0d0536ce2e"
toshiba_x300_8_tb="d5dc79ba-7f3a-4fe8-998c-5692e17da1f8"

if
  try_mnt $hgst_ultrastar_6_tb || \
  #try_mnt $toshiba_n300_6_tb || \
  try_mnt $toshiba_x300_8_tb || \
  false
then
  bk_part_start $bk_dir/personal
  mk_snapshot "$my_filter" $tr_dir/my my
  mk_snapshot "$home_filter" /home/misha home
  mk_snapshot "" $tr_dir_big/семейное семейное
  bk_part_end

  bk_part_start $bk_dir/downloadable
  mk_snapshot "" $tr_dir_big/archive archive
  mk_snapshot "$rs_filter" $tr_dir/raw_samples raw_samples
  mk_snapshot "" $tr_dir_big/public public
  bk_part_end

  set_dir $bk_dir/other
  mk_copy "" $tr_dir_big/mirror mirror
  mk_copy "" $tr_dir_big/porn porn
  mk_copy "" $tr_dir_big/unsorted unsorted

  bk_disk_end $bk_dir
  umount $usb_dir
  exit 0
fi


# local

bk_dir=/big_files/backup

if
  true
then
  bk_part_start $bk_dir/personal
  mk_snapshot "$my_filter" $tr_dir/my my
  mk_snapshot "$home_filter" /home/misha home
  bk_part_end

  bk_part_start $bk_dir/downloadable
  mk_snapshot "$rs_filter" $tr_dir/raw_samples raw_samples
  bk_part_end

  bk_disk_end $bk_dir
  exit 0
fi

